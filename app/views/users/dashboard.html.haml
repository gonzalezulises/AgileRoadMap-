= render 'layouts/top'
= render 'layouts/header'

.container
  .headline
    %h2 Mapa Prácticas Ágiles
  %table.table.table-bordered.table-striped
    %thead
      %tr
        %th Id
        %th Nombre
        %th Método Ágil
    %tbody
      - @practicas.each do |practica|
        %tr
          %td= practica.practica_id
          %td= practica.name
          %td= practica.agile_method
