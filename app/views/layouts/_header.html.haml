/ === Header ===
.header
  .navbar.navbar-default{role: "navigation"}
    .container
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: "#{root_path}", "data-push" => true}
          = image_tag("logo1-default.png", alt: "Logo", id: 'logo-header')
          -#%img#logo-header{alt: "Logo", src: "assets/logo1-default.png"}/
      / Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown{class: "#{'active' if params[:action] == 'home'}"}
            %a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", "data-toggle" => "dropdown", href: "#{root_path}", "data-push" => "true"}
              Agile Roadmap+
              %i.icon-angle-down
            %ul.dropdown-menu
              %li
                = link_to '¿Qué es un Agile Roadmap?', agile_map_definition_path, { 'data-push' => true }
              %li
                = link_to 'Pasos para elaborar un Agile Roadmap', agile_map_pasos_path, { 'data-push' => true }
              %li
                = link_to 'Lista de Prácticas Ágiles', '#'
          %li.dropdown{class: "#{'active' if params[:action] == 'about_us'}"}
            %a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", href: "#{pages_about_us_url}", "data-push" => "true"}
              = t('about_us')
          %li.dropdown{class: "#{'active' if params[:action] == 'index' and params[:controller] == 'practicas'} "}
            %a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", href: "#{practicas_path}", "data-push" => "true"}
              Mapa Prácticas Ágiles
          %li.dropdown
            %a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", "data-toggle" => "dropdown", href: "#"}
              = t('contact')
          - if signed_in?
            %li.dropdown.active
              %a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", "data-toggle" => "dropdown", href: "#"}
                = current_user.email
                %i.icon-angle-down
              %ul.dropdown-menu
                %li.active
                  = link_to 'Dashboard', dashboard_path, {'data-push' => true}

.container
  - flash.each do |key, value|
    %div{class: "alert alert-#{key} fade in"}
      = value  
      %button.close{"data-dismiss" => "alert", type: "button"} ×
