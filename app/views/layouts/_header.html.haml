/ === Header ===
.header
  .navbar.navbar-default{role: "navigation"}
    .container
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: "#{root_path}", "data-push" => true}
          AGILE ROADMAP+
          -#= image_tag("logo1-default.png", alt: "Logo", id: 'logo-header')
          -#%img#logo-header{alt: "Logo", src: "assets/logo1-default.png"}/
      / Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown{class: agile_roadmap_active?}
            %a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", "data-toggle" => "dropdown", href: "#"}
              Agile Roadmap+
              %i.icon-angle-down
            %ul.dropdown-menu
              %li{ class: active_class('agile_map_definition', 'pages')}
                = link_to '¿Qué es un Agile Roadmap?', agile_map_definition_path, { 'data-push' => true }
              %li{ class: active_class('what_is_agile_map', 'pages')}
                = link_to '¿Qué es AgileRoadmap+?', what_is_agile_map_path, { 'data-push' => true }
              %li{ class: active_class('agile_map_pasos', 'pages')}
                = link_to 'Pasos de AgileRoadmap+', agile_map_pasos_path, { 'data-push' => true }
              %li{ class: active_class('index', 'practicas')}
                = link_to 'Prácticas Ágiles de AgileRoadmap+', practicas_path, { 'data-push' => true }
              %li{ class: active_class('agile_team', 'pages')}
                = link_to 'Equipo AgileRoadmap+', agile_team_path, { 'data-push' => true }
          - if signed_in?
            %li.dropdown{ class: active_class('dashboard', 'users') }
              %a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", "data-toggle" => "dropdown", href: "#{dashboard_path}", 'data-push' => 'true'}
                Mi AgileRoadmap+

.container
  - flash.each do |key, value|
    %div{class: "alert alert-#{key} fade in"}
      = value  
      %button.close{"data-dismiss" => "alert", type: "button"} ×
