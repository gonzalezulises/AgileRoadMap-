.header
  .navbar.navbar-default{role: "navigation"}
    .container
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: "#{root_path}"}
          AGILE ROADMAP+
      / Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown{ class: active_class('home', 'pages') }
            = link_to(it('header.home'), root_path)
          %li.dropdown{class: agile_roadmap_active?}
            %a.dropdown-toggle{"data-close-others" => "false", "data-delay" => "0", "data-hover" => "dropdown", "data-toggle" => "dropdown", href: "#"}
              = it('header.dropdown.title') 
              %i.icon-angle-down
            %ul.dropdown-menu
              %li{ class: active_class('agile_map_definition', 'pages')}
                = link_to it('header.dropdown.one'), agile_map_definition_path
              %li{ class: active_class('what_is_agile_map', 'pages')}
                = link_to it('header.dropdown.two'), what_is_agile_map_path
              %li{ class: active_class('agile_map_pasos', 'pages')}
                = link_to it('header.dropdown.three'), agile_map_pasos_path
              %li{ class: active_class('index', 'practicas')}
                = link_to it('header.dropdown.four'), practicas_path
              %li{ class: active_class('stats', 'pages')}
                = link_to it('header.dropdown.five'), stats_path
              %li{ class: active_class('agile_team', 'pages')}
                = link_to it('header.dropdown.six'), agile_team_path
          - if signed_in?
            %li.dropdown{ class: active_class('dashboard', 'users') }
              = link_to(it('header.myagile'), dashboard_path)

.container
  - flash.each do |key, value|
    %div{class: "alert alert-#{key} fade in"}
      = value  
