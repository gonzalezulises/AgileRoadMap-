= render 'layouts/top'
= render 'layouts/header'

/ === Content Part ===
.container
  .row
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      = form_for :session, url: sessions_path, html: { class:'reg-page' } do |f|
        .reg-header
          %h2 Acceso a cuenta
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.icon-envelope-alt
          = f.email_field :email, class: 'form-control', placeholder: 'Email', required: true
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.icon-unlock
          = f.password_field :password, class: 'form-control', placeholder: 'Contraseña', required: true
        .row
          .col-md-6
            -#%label.checkbox
              -#%input{type: "checkbox"}/
              -#Stay signed in
          .col-md-6
            = f.submit 'Login', class: 'btn btn-u pull-right'
        %hr/
        %h4 ¿Usuario nuevo?
        %p
          = link_to '¡Regístrese ahora mismo!', signup_path, {'data-push' => true}
        %h4 ¿Olvidaste la contraseña?
        %p
          = link_to "Haz clic aquí", new_password_reset_path, { 'data-push' => true }
          para restablecerla

