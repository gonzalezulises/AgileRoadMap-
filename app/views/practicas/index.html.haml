= render 'layouts/top'
= render 'layouts/header'

.container
  .row{ style: 'margin-top: 20px'}
    .col-sm-6.center-img-text
      %a{ href: 'https://www.dropbox.com/s/1sw3elqny3pa15n/Diagrama%20Venn%20Pr%C3%A1cticas.ppsx'}
        = image_tag 'agrupacion-metodo-agil.png', class: 'img-responsive'
    .col-sm-6.center-img-text
      = it "agile_practices.intro.one"
  .row
    .col-sm-6.center-img-text
      %a{ href: 'https://www.dropbox.com/s/xocfp2ltdtf6bqv/Agrupaci%C3%B3n%20de%20pr%C3%A1cticas%20%C3%A1giles.ppsx'}
        = image_tag 'agrupacion-ambito-practica.png', class: 'img-responsive'
    .col-sm-6.center-img-text
      = it "agile_practices.intro.two"


  .headline
    %h2 
      = it "agile_practices.table.title"
  %table.table.table-bordered.table-striped
    %thead
      %tr
        %th.col-sm-10 
          = it "agile_practices.table.col.one.name"
        %th.col-sm-2 
          = it "agile_practices.table.col.two.name"
    %tbody
      - @practicas.each do |practica|
        %tr
          %td.text_left
            %span.badge  
              = practica.position_with_prefix
            = link_to practica.name, practica_path(id: practica.position), "target" => "_blank"
          %td= practica.agile_method.blank? ? '---' : practica.agile_method

